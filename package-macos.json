{
  "name": "projet-gestion-maitre",
  "version": "2.1.0",
  "description": "Application de bureau Maître pour la gestion complète.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-css": "tailwindcss -i ./src/css/input.css -o ./src/css/output.css --minify",
    "prebuild": "npm run build-css",
    "build:mac": "npm run prebuild && electron-builder --mac --publish=never"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.10.0",
    "node-fetch": "^3.3.2",
    "node-machine-id": "^1.1.12"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "tailwindcss": "^3.4.4"
  },
  "build": {
    "appId": "com.gestionpro.app",
    "productName": "GestionPro",
    "asar": false,
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "database.js",
      "config.js",
      "license-manager-electron.js",
      "expenses-db.js",
      "login.html",
      "login.js",
      "activation.html",
      "activation.js",
      "startup.html",
      "src/**/*",
      "database/main-clean.db",
      "node_modules/**/*",
      "!node_modules/.cache/**/*",
      "!database/main.db",
      "!database/main.db-shm",
      "!database/main.db-wal"
    ],
    "mac": {
      "category": "public.app-category.business",
      "target": [
        {
          "target": "dir",
          "arch": ["x64", "arm64"]
        }
      ],
      "artifactName": "GestionPro-${version}-${arch}.${ext}"
    }
  }
}
